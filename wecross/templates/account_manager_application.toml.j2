[service]
    address = '{{ account_manager_config.address | default("0.0.0.0") }}'
    port = {{ account_manager_config.port | default('8340')}}
    sslKey = 'classpath:ssl.key'
    sslCert = 'classpath:ssl.crt'
    caCert = 'classpath:ca.crt'
    sslOn = true

[admin]
    username = '{{ account_manager_config.admin.username | default("org1-admin") }}'
    password = '{{ account_manager_config.admin.password | default(lookup("password", wecross_workdir + "/password/account_manager_admin_pass length=16 chars=ascii_letters,digits,hexdigits")) }}'

[auth]
    # for issuing token
    name = '{{ account_manager_config.auth.username | default("org1") }}'
    expires = 18000 # 5 h
    noActiveExpires = 600 # 10 min

[encrypt]
    # for http request data encrypt
    privateKeyFile = 'classpath:rsa_private.pem'
    publicKeyFile = 'classpath:rsa_public.pem'

[db]
    # for connect database, you can add other connect configs behind '?'
    # Note: useSSL=false for connect MySQL 8.0+, if you deploy mysql remotely, we recommended you use SSL.
    url = 'jdbc:mysql://{{ account_manager_config.db.host | default("localhost:3306") }}/wecross_account_manager?useSSL=false'
    username = '{{ account_manager_config.db.username | default("root") }}'
    password = '{{ account_manager_config.db.password | default("") }}'
    # for mysql sensitive fields encrypt
    # if this field is empty of not configured, the encrypt operation will not take place
    encryptKey = '{{ account_manager_config.db.encryptKey | default(lookup("password", wecross_workdir + "/password/account_manager_db_encryptKey length=16 chars=ascii_letters,digits,hexdigits")) }}'

[ext]
    # for image auth code, allow image auth token empty
    allowImageAuthCodeEmpty = true
